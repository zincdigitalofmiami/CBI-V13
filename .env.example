# Option A: Standard Postgres connection string (e.g., Neon)
# Example with SSL: add ?sslmode=require to the end
DATABASE_URL=postgresql+psycopg2://user:password@host:port/dbname?sslmode=require

# Option B: Google Cloud SQL with IAM Auth (no JSON key needed on Cloud Run)
# Set USE_IAM_AUTH=true and provide the following; leave DATABASE_URL empty
USE_IAM_AUTH=false
CLOUD_SQL_CONNECTION_NAME=project:region:instance
DB_USER=postgres
DB_NAME=postgres
# DB_PASSWORD is optional; omit when using IAM-only auth
DB_PASSWORD=

# App settings
ADMIN_TOKEN=change-me
REFRESH_HOURS=8

# FREE API Keys for Institutional-Grade Intelligence (all zero cost)
# Register at respective websites for free API keys

# Financial & Market Data (FREE)
ALPHAVANTAGE_API_KEY=           # Free: https://www.alphavantage.co/support/#api-key
FRED_API_KEY=                   # Free: https://research.stlouisfed.org/docs/api/api_key.html

# Government Agricultural Data (FREE)
EIA_API_KEY=                    # Free: https://www.eia.gov/opendata/register.php
USDA_API_KEY=                   # Free: https://quickstats.nass.usda.gov/api
CFTC_API_KEY=                   # Not needed - CFTC data is public

# Weather Intelligence (FREE)
OPENWEATHER_API_KEY=            # Free tier: https://openweathermap.org/api (1000 calls/month)
NOAA_API_KEY=                   # Not needed - NOAA data is public

# News & Sentiment (FREE tiers available)
NEWSAPI_KEY=                    # Free tier: https://newsapi.org/register (500 requests/month)
TWITTER_BEARER_TOKEN=           # Free tier: https://developer.twitter.com/

